{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">

        {% if posts %}
            {% for post in posts %}
                <article>
                    <h3 class="title-"><a href="{{ path('show-post', {id: post.id}) }}">{{ post.title | title }} </a>
                    </h3>
                    <div class="post-summary">
                        <p>
                            {% set postContent = post.body %}
                            {{ post.body | length > 450 ? post.body | slice(0, 450) ~ '...' : post.body }}
                        </p>
                        <div class="post-summary-footer">
                            <button class="btn btn-small btn-inverse" type="button"
                                    onclick="location.href='{{ path('show-post', {id: post.id}) }}'">Read more
                            </button>
                        </div>
                    </div>
                </article>
            {% endfor %}
        {% endif %}

        <!-- Pagination -->
        <div class="pagination">
            {{ knp_pagination_render(posts) }}
        </div>
    </div>
{% endblock %}