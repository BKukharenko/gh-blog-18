{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>Title: {{ post.title }}</h1>
        <p>Content: {{ post.body }}</p>
        <h3>Category: {{ category.name }}</h3>
        <h4>Published at: {{ post.createdAt | date("Y-m-d") }}</h4>
    </div>
{% endblock %}